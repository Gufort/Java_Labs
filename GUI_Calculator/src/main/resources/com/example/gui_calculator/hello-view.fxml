<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gui_calculator.HelloController">
    <TextField fx:id="display"
               editable="false"
               prefHeight="50"
               prefWidth="230"
               style="-fx-font-size: 24px; -fx-alignment: center-right;"
               promptText="0"/>

    <GridPane hgap="10" vgap="10">
        <Button text="AC" prefHeight="50" onAction="#handleClearButton" prefWidth="50" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Button text="(" prefHeight="50" onAction="#handleOperatorButton" prefWidth="50" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Button text=")" prefHeight="50" onAction="#handleOperatorButton" prefWidth="50" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <Button text="/" prefHeight="50" onAction="#handleOperatorButton" prefWidth="50" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Button text="7" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button text="8" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Button text="9" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <Button text="/" prefHeight="50" onAction="#handleOperatorButton" prefWidth="50" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

        <Button text="4" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button text="5" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Button text="6" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <Button text="*" prefHeight="50" onAction="#handleOperatorButton" prefWidth="50" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

        <Button text="1" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Button text="2" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Button text="3" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <Button text="-" prefHeight="50" onAction="#handleOperatorButton" prefWidth="50" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

        <Button text="0" prefHeight="50" onAction="#handleNumberButton" prefWidth="50" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Button text="." prefHeight="50" onAction="#handleOperatorButton" prefWidth="50" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Button text="X" prefHeight="50" onAction="#handleBackButton" prefWidth="50" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
        <Button text="=" prefHeight="50" onAction="#handleEqualButton" prefWidth="50" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
    </GridPane>
</VBox>
